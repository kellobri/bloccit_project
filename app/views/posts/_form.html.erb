<%= form_for [topic, post] do |f| %>
	<% if post.errors.any? %>
		<div class="alert alert-danger">
			<h4>There are <%= pluralize(post.errors.count, "error") %>.</h4>
			<ul>
				<% post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= simple_form_for [topic, post] do |f| %>
		<%= f.label :title %>
		<%= f.text_field :title, class: 'form-control', placeholder: "Enter post title" %>
		<%= f.label :body %>
		<%= f.text_area :body, rows: 12, class: 'form-control', placeholder: "Enter post body" %>
		<%= f.button :submit, "Submit Your Post", class: 'btn btn-success' %>
	<% end %>
<% end %>